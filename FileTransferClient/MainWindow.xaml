<Window x:Class="FileTransferClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileTransferClient"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="220" Width="193">
    <Grid>
        <TextBox x:Name="IpField" Text="localhost" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="119" Margin="0,60,0,0"/>
        <Label Content="Ip addresse" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.557,-0.272"/>
        <TextBox x:Name="PortField" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="119" Text="8008" Margin="0,96,0,0"/>
        <Label Content="Port" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.557,-0.272" Margin="0,76,0,0"/>
        <Button Content="Forbind" Click="OnConnectPressed" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Width="95" Height="35"/>
        <Label Content="Vælg Fil Server" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Top"/>

    </Grid>
</Window>
